<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <h2><%= @user.errors.count %>errors</h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <p><%= f.label :name, "Name" %></p>
  <p><%= f.text_field :name %></p>

  <p><%= f.label :email, "Email" %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.submit %></p>
<% end %>
