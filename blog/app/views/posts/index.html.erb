<h1>All Posts</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Context</th>
    </tr>
    <% @posts.each do |post| %>
        <tr>
            <td><%= link_to post.title, post %></td>
            <td><%= link_to post.text, post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Delete', post_path(post),
                method: :delete, data: { confirm: 'You sure?'} %></td>
            
        </tr>
    <% end %>
</table>
<%= link_to 'New Post', new_post_path %>
